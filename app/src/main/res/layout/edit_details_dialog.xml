<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/date_color"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/txtTitle_Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Add Your Name :"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName_Dialog"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:hint="Name"
            android:background="@drawable/border"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:focusedByDefault="true"
            android:focusable="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:text="Add Your Bio :"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etBio_Dialog"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:hint="Bio"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnSave_Dialog"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="Save"
            android:textSize="20dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/green"
            tools:layout_editor_absoluteX="321dp"
            tools:layout_editor_absoluteY="231dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>